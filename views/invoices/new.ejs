<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <!--The Heading-->
        <h1>Add New Invoice</h1>
            <!--The Form-->
            <div id="addProductForm">
                <form 
                    action="/invoices/" 
                    method="POST">
                    <div class="form-group">
                        <label class="form-check-label" for="invoiceNumber">
                            Invoice Number
                        </label>
                        <input class="form-control" type="text" name="invoiceNumber" placeholder="Invoice Number">
                    </div>
                    <div class="form-group">
                        <label class="form-check-label" for="invoiceDate">
                            Invoice Date
                        </label>
                        <input class="form-control" type="date" name="invoiceDate">
                    </div>
                    <div class="form-group">
                        <label class="form-check-label" for="shop">
                            Shop
                        </label>
                        <input class="form-control" type="text" name="shop" placeholder="Shop">
                    </div>
                    <div class="form-group">
                    <label class="form-check-label" for="amount">
                            Invoice Total Amount
                        </label>
                        <input class="form-control" type="number" min="0" step="0.01" name="amount">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
               </form>
               <!-- Link to go back -->
               <a href="#">Go Back</a>
          </div>   
     </div>
</div>

<% include ../partials/footer.ejs %>