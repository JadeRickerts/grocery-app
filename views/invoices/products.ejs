<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <p><strong>Invoice Number:</strong> <%=invoice.invoiceNumber%></p>
            <p><strong>Invoice Date:</strong> <%=invoice.invoiceDate%></p>
            <p><strong>Shop:</strong> <%=invoice.shop%></p>
            <p><strong>InvoiceAmount:</strong> <%=invoice.amount%></p>
            </hr>
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-3">
                    <span class="product-heading">Brand</span>
                </div>
                <div class="col-md-4">
                    <span class="product-heading">Description</span>
                </div>
                <div class="col-md-3">
                    <span class="product-heading">Category</span>
                </div>
                <div class="col-md-1">
                    <span class="product-heading">Pack Size</span>
                </div>
                <div class="col-md-1">
                    <span class="product-heading">Weighted</span>
                </div>
                <% products.forEach(function(product){ %>
                    <div class="col-md-3">
                        <span><%=product.brand%></span>
                    </div>
                    <div class="col-md-4">
                        <span><%=product.description%></span>
                    </div>
                    <div class="col-md-3">
                        <span><%=product.category%></span>
                    </div>
                    <div class="col-md-1">
                        <span><%=product.packSize%><%=product.uom%></span>
                    </div>
                    <div class="col-md-1">
                        <span><%=product.weighted%></span>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>