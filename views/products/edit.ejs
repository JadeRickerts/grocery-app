<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <!--The Heading-->
        <h1>Edit <%=product.description%></h1>
            <!--The Form-->
            <div id="addProductForm">
                <form 
                    action="/products/<%=product._id%>?_method=PUT" 
                    method="POST">
                    <div class="form-group">
                        <label class="form-check-label" for="name">
                            Description
                        </label>
                        <input class="form-control" type="text" name="name" value="<%=product.description%>">
                    </div>
                    <div class="form-group">
                        <label class="form-check-label" for="brand">
                            Brand
                        </label>
                        <input class="form-control" type="text" name="brand" value="<%=product.brand%>">
                    </div>
                    <div class="form-group" id="packSize">
                        <label class="form-check-label" for="packSize">
                            Size
                        </label>
                        <div class="form-row">
                            <div class="form-group col-lg-6" id="packSizeL">    
                                <input class="form-control" type="number" name="size" value="<%=product.packSize%>">
                            </div>
                            <div class="form-group col-lg-6" id="packSizeR">
                                <select class="form-control" name="uom">
                                    <option value="g">grams</option>
                                    <option value="ml">milliliters</option>
                                    <option value="each">each</option>
                                </select>
                            </div> 
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-check-label" for="weighted">
                            Weighted Product?
                        </label>
                        <select class="form-control" name="weighted">
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-check-label" for="category">
                            Category
                        </label>
                        <input class="form-control" type="text" name="category" value="<%=product.category%>">
                    </div>
                    <div class="form-group">
                    <label class="form-check-label" for="barcode">
                            Bar Code
                        </label>
                        <input class="form-control" type="text" name="barcode" value="<%=product.barcode%>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
               </form>
               <!-- Link to go back -->
               <a href="#">Go Back</a>
          </div>   
     </div>
</div>

<% include ../partials/footer.ejs %>